            <mrow>
              \amp = \frac{GmM \frac{1}{t} \cos t}{ \left( \frac{
              \cos^2 t}{t^2} + \frac{\sin ^2 t}{t^2}
              \right)^{\frac{3}{2}}} 
              \left( \frac{-1}{t^2} \cos t -
              \frac{1}{t} \sin t \right) 
            </mrow>
